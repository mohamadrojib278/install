# Fungsi konversi waktu
secs_to_human() {
    local jam=$(( $1 / 3600 ))
    local menit=$(( ($1 % 3600) / 60 ))
    local detik=$(( $1 % 60 ))
    echo "Waktu instalasi: ${jam} jam ${menit} menit ${detik} detik"
}

